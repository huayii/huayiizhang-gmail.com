<odoo>
  <data>
    <record id="view_train_subject_tree" model="ir.ui.view">
            <field name="name">pscloud.train.subject.tree</field>
            <field name="model">pscloud.train.subject</field>
            <field name="arch" type="xml">
                <tree string="科目列表">
                    <field name="name"/>
                    <field name="desc"/>
                </tree>
            </field>
    </record>
    <record id="action_training_subject" model="ir.actions.act_window">
            <field name="name">科目</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pscloud.train.subject</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="view_train_subject_tree"/>
            <field name="view_mode">tree</field>
        </record>
  </data>

  <menuitem id="training_menu_root" name="培训管理" sequence="0"/>
  <menuitem id="subject_menu" parent="training_menu_root" action="action_training_subject" sequence="10"/>
</odoo>